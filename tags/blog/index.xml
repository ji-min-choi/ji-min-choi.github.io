&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nv">theme&lt;/span> &lt;span class="o">=&lt;/span> &lt;span class="s1">&amp;#39;hugo-theme-stack&amp;#39;&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="o">[&lt;/span>params.defaultImage.opengraph&lt;span class="o">]&lt;/span>
